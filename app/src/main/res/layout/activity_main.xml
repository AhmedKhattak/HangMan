<?xml version="1.0" encoding="utf-8"?>

<!-- put everything in scrollview for compatibility with all screen heights-->

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.ahmedkhattak.hangman.MainActivity">

        <TextView
            android:id="@+id/wordHint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hangmanImage"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="2"
            android:text="This is a place holder hint noice !"
            android:textColor="@android:color/black"
            android:textSize="16sp" />


        <!-- this container contains each edittext view for the game words -->

        <com.google.android.flexbox.FlexboxLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/flexWordContainer"
            style="@style/Theme.App.Base"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/wordHint"
            android:layout_marginTop="0dp"
            app:alignContent="flex_start"
            app:alignItems="flex_start"
            app:flexDirection="row"
            app:flexWrap="wrap"
            app:justifyContent="center">


        </com.google.android.flexbox.FlexboxLayout>

        <ImageView
            android:id="@+id/hangmanImage"
            android:layout_width="wrap_content"
            android:layout_height="180dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="0dp"
            android:contentDescription="@string/the_man_on_the_gallows_with_his_life_in_the_players_hands"
            android:paddingLeft="60dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/gallows" />


        <com.google.android.flexbox.FlexboxLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/bakedKeyboard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/flexWordContainer"
            android:orientation="vertical"
            android:padding="0dp"
            app:alignContent="flex_start"
            app:alignItems="flex_start"
            app:flexDirection="row"
            app:flexWrap="wrap"
            app:justifyContent="center">

